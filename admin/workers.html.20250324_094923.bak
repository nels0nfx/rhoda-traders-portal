    <script type="module">
        // Import the functions you need from the SDKs you need
        import { initializeApp } from "https://www.gstatic.com/firebasejs/11.5.0/firebase-app.js";
        import { getAnalytics } from "https://www.gstatic.com/firebasejs/11.5.0/firebase-analytics.js";
        import { getAuth, onAuthStateChanged, signOut } from "https://www.gstatic.com/firebasejs/11.5.0/firebase-auth.js";
        import { getFirestore, collection, query, where, getDocs, updateDoc, doc } from "https://www.gstatic.com/firebasejs/11.5.0/firebase-firestore.js";

        // Your web app's Firebase configuration
        const firebaseConfig = {
            apiKey: "AIzaSyBCF-MkWe8JhkXKNoKLqzWAZxZVHMukO-c",
            authDomain: "rhoda-traders.firebaseapp.com",
            projectId: "rhoda-traders",
            storageBucket: "rhoda-traders.firebasestorage.app",
            messagingSenderId: "88738705806",
            appId: "1:88738705806:web:0cbbb1be4ce51daa7334df",
            measurementId: "G-44T210GQ6S"
        };

        // Initialize Firebase
        const app = initializeApp(firebaseConfig);
        const analytics = getAnalytics(app);
        const auth = getAuth();
        const db = getFirestore();

        // Check if user is logged in and is an admin
        onAuthStateChanged(auth, async (user) => {
            if (user) {
                // User is signed in
                try {
                    // Get user data from Firestore
                    const q = query(collection(db, 'users'), where('uid', '==', user.uid));
                    const querySnapshot = await getDocs(q);
                    
                    if (!querySnapshot.empty) {
                        const userData = querySnapshot.docs[0].data();
                        
                        // Check if user is an admin
                        if (userData.role === 'admin') {
                            // Update UI with admin data
                            updateAdminInfo(userData);
                            
                            // Load workers data
                            loadWorkersData();
                        } else {
                            // Not an admin, redirect to user dashboard
                            window.location.href = '../dashboard/index.html';
                        }
                    } else {
                        // User not found in Firestore
                        window.location.href = '../login.html';
                    }
                } catch (error) {
                    console.error('Error getting user data:', error);
                    window.location.href = '../login.html';
                }
            } else {
                // User is signed out, redirect to login page
                window.location.href = '../login.html';
            }
        });

        // Update admin info in the UI
        function updateAdminInfo(userData) {
            const userGreeting = document.querySelector('.user-greeting strong');
            if (userGreeting) {
                userGreeting.textContent = userData.firstName ? `${userData.firstName} ${userData.lastName}` : 'Admin';
            }
        }

        // Load workers data
        async function loadWorkersData() {
            try {
                // Get active workers
                const activeWorkersQuery = query(
                    collection(db, 'users'),
                    where('status', '==', 'approved'),
                    where('role', '==', 'user')
                );
                
                const activeWorkersSnapshot = await getDocs(activeWorkersQuery);
                
                // Get inactive workers
                const inactiveWorkersQuery = query(
                    collection(db, 'users'),
                    where('status', '==', 'inactive'),
                    where('role', '==', 'user')
                );
                
                const inactiveWorkersSnapshot = await getDocs(inactiveWorkersQuery);
                
                // Update dashboard cards
                const totalWorkers = activeWorkersSnapshot.size + inactiveWorkersSnapshot.size;
                const activeWorkers = activeWorkersSnapshot.size;
                const inactiveWorkers = inactiveWorkersSnapshot.size;
                
                // Calculate average performance (simplified)
                let totalPerformance = 0;
                let workerCount = 0;
                
                activeWorkersSnapshot.forEach(doc => {
                    const userData = doc.data();
                    // Simulate performance score (would be calculated from reports in a real app)
                    const performance = Math.floor(Math.random() * 30) + 70; // 70-100 range
                    totalPerformance += performance;
                    workerCount++;
                });
                
                const averagePerformance = workerCount > 0 ? Math.floor(totalPerformance / workerCount) : 0;
                
                // Update the UI
                document.querySelectorAll('.dashboard-card-value')[0].textContent = totalWorkers;
                document.querySelectorAll('.dashboard-card-value')[1].textContent = activeWorkers;
                document.querySelectorAll('.dashboard-card-value')[2].textContent = inactiveWorkers;
                document.querySelectorAll('.dashboard-card-value')[3].textContent = `${averagePerformance}%`;
                
                // In a real application, you would load the actual worker data here
                // and populate the worker cards dynamically
            } catch (error) {
                console.error('Error loading workers data:', error);
            }
        }

        // Add event listeners for filter dropdowns
        document.querySelectorAll('.filter-dropdown').forEach(dropdown => {
            dropdown.addEventListener('change', function() {
                // In a real application, you would filter the workers list based on the selected options
                console.log('Filter changed:', this.value);
            });
        });

        // Add event listener for search input
        const searchInput = document.querySelector('.search-input');
        if (searchInput) {
            searchInput.addEventListener('input', function() {
                // In a real application, you would search the workers list based on the input value
                console.log('Search query:', this.value);
            });
        }

        // Add event listeners for worker action buttons
        document.querySelectorAll('.worker-actions button').forEach(button => {
            button.addEventListener('click', function() {
                const action = this.textContent.trim();
                const workerCard = this.closest('.worker-card');
                const workerName = workerCard.querySelector('.worker-name').textContent;
                
                console.log(`${action} clicked for ${workerName}`);
                
                // In a real application, you would implement the action functionality here
                if (action.includes('View')) {
                    // Show worker details
                    alert(`Viewing details for ${workerName}`);
                } else if (action.includes('Message')) {
                    // Open message compose form
                    alert(`Composing message to ${workerName}`);
                } else if (action.includes('Suspend')) {
                    // Confirm and suspend worker
                    if (confirm(`Are you sure you want to suspend ${workerName}?`)) {
                        alert(`${workerName} has been suspended.`);
                    }
                }
            });
        });

        // Handle logout
        document.querySelector('a[href="../index.html"]').addEventListener('click', async function(event) {
            event.preventDefault();
            try {
                await signOut(auth);
                window.location.href = '../index.html';
            } catch (error) {
                console.error('Error signing out:', error);
            }
        });
    </script>

